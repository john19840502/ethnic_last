<!-- replace "td.line-item-name" -->
<td class="line-item-name">
  <%= item.variant.product.meta_description.split(' ').first %> <%= item.variant.product.name %><%= "/" + variant_options(item.variant).split(',').second.split(':').second unless item.variant.option_values.empty? %><%= "/" + variant_options(item.variant).split(',').first.split(':').second %>
  <% if item.variant.sku.present? %>
    <strong><%= Spree.t(:sku) %>:</strong> <%= item.variant.sku %>
  <% end %>
</td>