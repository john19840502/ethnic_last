<h2>Brands</h2>
<ul class="categories" id="brand-list" data-display="5">
 <% for brand in Spree::Taxon.active %>
  <% if @brand && @brand.id == brand.id %>
    <li class="selected"><%=link_to brand.name, nested_taxons_path(brand), title: "#{brand.name} products" %></li>
   <%else%>
    <li><%=link_to brand.name, nested_taxons_path(brand), title: "#{brand.name} products" %></li>
   <% end %>
 <% end %>
</ul>
<a class="more-brands" id="brands-more">More brands</a>
<a class="more-brands" id="brands-less">Less brands</a>