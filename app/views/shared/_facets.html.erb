<% @products.facets.keys.each do |facet| %>
  <% facet_key = facet %>
  <% facet = facet.gsub('taxons.','') %>
  <% if @searcher.display_facet?(facet) %>
    <h2 class="filter"><%=facet%></h2>
    <div class="use_category">
      <ul class="categories filter" data-display="5">
        <% for val in @products.facets[facet_key] %>
        <%
          name = val[0]
          results = val[1]
        %>
        <% if @searcher.facet_and_value_selected(facet, name) %>
          <% link= "#{request.fullpath}/#{facet}/#{name}"%>
          <li class="selected">
            <a href="#", onclick="remove_filter('<%=facet%>','<%=name%>');">
              <%= name %> (<%=results%>)
              <span class="remove_filter">Remove filter</span>
              <span class="ss-icon filter-close">‚ê°</span>
            </a>
          </li>
        <% else %>
          <li><%=link_to "#{name} (#{results})", "#{request.fullpath}/#{facet}/#{name}", title: "#{name} products" %></li>
        <% end %>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
