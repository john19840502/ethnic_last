<div id="favorites-index" data-hook="account_my_favorite_products" class="modal" style="display:block;">
  <div class="modal-content">
    <header>
      <h1><%= Spree.t(:my_favorites) %></h1>
      <span class="close"><a href="#" onclick="$('#my_favorites').hide();return false;" title="Close"></a></span>
    </header>
    <section>
      <% if @favorites.present? %>
          <ul>
            <% @favorites.each do |favorite| %>
                <li>
                  <figure>
                    <%= link_to small_image(favorite.favorable), product_path(favorite.favorable) %>
                  </figure>
                  <div class="variant-description">
                    <h2><%= link_to favorite.favorable.name, product_path(favorite.favorable) %></h2>
                    <p><%= favorite.favorable.brand.name %></p>
                    <p><%= money favorite.favorable.price %> </p>
                  </div>
                  <%= link_to favorite_path(favorite), method: :delete, class: 'delete', remote: true do %>
                      <span class="ss-delete"></span>
                  <% end %>
                </li>
            <% end %>
          </ul>
      <% else %>
          <p><%= Spree.t(:you_have_no_favorites_yet) %></p>
      <% end %>
      <%= paginate @favorites %>
    </section>
  </div>
</div>
