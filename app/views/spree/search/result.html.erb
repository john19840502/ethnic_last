<head>
	<%= stylesheet_link_tag "jquery-ui" %>
	<%= javascript_include_tag "jquery-ui" %>
	<%= javascript_include_tag "price_range_selector" %>
</head>
<%= render :partial => 'shared/header' %>
<% if @taxon %>
    <%= content_for :head do %>
        <% bg = get_background_image(@taxon) %>
        <% if bg %>
          <style type="text/css">
            html{
              background: #304040 url("<%= bg.image %>") center top fixed no-repeat;
              background-attachment: fixed;
              background-size: cover;
            }
          </style>
        <% end %>
    <% end %>
<% end %>

<section class="content">
  <aside>
    <%= form_tag "/do_search", :method => :post, :class => "search", :id => "search" do %>
			<input type="hidden" id="filters" name="filters" value='<%=@searcher.json_filters%>' />
			<input type="hidden" id="remove_filter" name="remove_filter" value='' />
			<%= hidden_field_tag :previous_keywords, params[:keywords] %>
      <div>
        <%= search_field_tag :keywords, params[:keywords], :placeholder => t(:search) %>
      </div>
    <% end %>
		<h2 class="filter">Current selected filters</h2>
		<div class="use_category">
      <ul class="categories filter">
				<li class="back"><a href="/collection"><span></span>Back to Categories</a></li>
				<% for val in @searcher.properties[:facets] %>
					<li class="selected">
						<a href="#", onclick="remove_filter('<%=val[:facet]%>','<%=val[:value]%>');">
							<%= val[:facet] %> : <%= val[:value] %>
							<span class="remove_filter">Remove filter</span>
							<span class="ss-icon filter-close">␡</span>
						</a>
					</li>
				<% end %>
      </ul>

    <%= render :partial => '/shared/facets'%>

  <p>
		<label for="amount">PRICE RANGE:</label>
		<input type="text" id="amount" name="price_range" readonly style="border:0; color:rgba(255, 255, 255, 0.75); font-weight:bold; margin-top: 5px;" class="false">
	</p>
	<div id="slider-range"></div>
  </aside>
  <div class="products-wrapper">
    <ul id="products" class="inline product-listing products" data-hook="">
    <% if @products == nil || @products.empty? %>
		 <p>Oops, there aren't any products that match your search and/or filter. Please choose an other one.</p>
    <% else %>
			<%= render :partial => 'spree/shared/products_list', :locals => { :products => @products, page: @page } %>
    <% end %>
    </ul>
		<%= paginate @products, theme: 'twitter-bootstrap-3' %>
  </div>
</section>

<script type="text/javascript">

	function remove_filter(facet, value){
		$("#remove_filter").val('{"facet": "'+facet+'", "value": "'+value+'"}');
		$("#search").submit();
	}

	$('document').ready(function(){

		initInfiniteScroll();

		$('ul.categories.filter').toggle();

		$('ul.categories.filter:has( > li.selected)').css('display','block');

		var currency = $("a[title='Currency selection'] small").text();

    });

	$("#slider-range").mouseup(function() {
    var full_url = set_current('page', 1);
		var price_range = $('#amount').val();
		var currency_type;
		var currency = $("a[title='Currency selection'] small").text();
		$('#amount').attr('class','true');
		if(currency == "USD")
			{price_range = price_range.replace(/\$/g,'')}
		else
			{price_range = price_range.replace(/\€/g,'')}

//		window.location.replace(full_url + "&price_range=" + price_range);
		$.ajax({
		  type: 'get',
		  url: full_url,
		  format: 'js',
		  data: {price_range: price_range},
		  success: function (data) {
              $('#products').infinitescroll('destroy');
              $('#products').infinitescroll({
                  state: {
                      isDestroyed: false,
                      isDone: false
                  }
              });
              $('#products').data('infinitescroll', null);

              $('#products.product-listing').html(data);
              $('.products-wrapper > .pagination').html($('#products > temp > .pagination').html());
              $('#products > temp').remove();
              initInfiniteScroll();

              set_current('price_range', price_range);
              // set_current('price_filter_req', true);
		  }
		 });
	});
</script>
