<div class="block_2 top-slider-intro">
	<div class="slider-container">
		<div style="overflow: hidden; position: relative;" class="flex-viewport">
			<ul class="slides">
				<% slider1_images.each do |image| %>
					<li style="display:inline-block;">
						<a href="<%= image.url %>" target = "<%= image.new_tab ? '_blank' : '' %>" >
							<%=image_tag image.attachment.url(), class: 'block_2_images' %>
						</a>
					</li>
				<% end %>
			</ul>
		</div>
		<ul class="flex-direction-nav" style="margin-bottom: 0;">
			<li><a class="flex-prev" href="#">Previous</a></li><li><a class="flex-next" href="#">Next</a></li>
		</ul>
	</div>
</div>
